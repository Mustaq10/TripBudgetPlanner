<Shell
    x:Class="TripBudgetPlanner.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TripBudgetPlanner.Views">

    <TabBar>

        <ShellContent
            Title="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:HomePage}" />

        <ShellContent
            Title="Dashboard"
            Icon="dashboard.png"
            ContentTemplate="{DataTemplate views:DashboardPage}" />

        <ShellContent
            Title="Trips"
            Icon="trip.png"
            ContentTemplate="{DataTemplate views:TripListPage}" />

    </TabBar>

</Shell>

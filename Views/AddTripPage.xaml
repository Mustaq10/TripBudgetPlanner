<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TripBudgetPlanner.Views.AddTripPage"
             Title="Add Trip"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <Frame Padding="20"
               Margin="20"
               BackgroundColor="White"
               CornerRadius="20"
               HasShadow="True">

            <VerticalStackLayout Spacing="15">
                <Label Text="Create New Trip"
                       FontSize="26"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#222" />

                <Entry Placeholder="Trip Name"
                       Text="{Binding Name}" />

                <Entry Placeholder="Budget"
                       Keyboard="Numeric"
                       Text="{Binding Budget}" />

                <DatePicker Date="{Binding StartDate}" />
                <DatePicker Date="{Binding EndDate}" />

                <Button Text="Save Trip"
                        Command="{Binding SaveTripCommand}"
                        BackgroundColor="#0078ff"
                        TextColor="White"
                        CornerRadius="12"
                        HeightRequest="50" />
            </VerticalStackLayout>

        </Frame>
    </ScrollView>

</ContentPage>
